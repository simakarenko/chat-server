<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <servlet>
        <servlet-name>GetList</servlet-name>
        <servlet-class>academy.prog.GetListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetList</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>On_Off</servlet-name>
        <servlet-class>academy.prog.OnOffUsersGetListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>On_Off</servlet-name>
        <url-pattern>/getstatus</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User_Status</servlet-name>
        <servlet-class>academy.prog.UserStatusGetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_Status</servlet-name>
        <url-pattern>/getstatusto</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Chat_Room_Get_List</servlet-name>
        <servlet-class>academy.prog.ChatRoomGetListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat_Room_Get_List</servlet-name>
        <url-pattern>/getchatroom</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Private_Get_List</servlet-name>
        <servlet-class>academy.prog.PrivateGetListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Private_Get_List</servlet-name>
        <url-pattern>/getprivate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Private_Add</servlet-name>
        <servlet-class>academy.prog.PrivateAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Private_Add</servlet-name>
        <url-pattern>/addprivate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>academy.prog.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Chat_Room_Add</servlet-name>
        <servlet-class>academy.prog.ChatRoomAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat_Room_Add</servlet-name>
        <url-pattern>/addchatroom</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
